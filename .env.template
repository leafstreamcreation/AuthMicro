# Environment Variables Template
# Copy this file to .env and update the values
AUTH_SERVICE_PORT=8060
# API Key for securing endpoints
API_KEY_CIPHER=your-super-secret-api-cipher-here
API_KEY_SECRET=your-super-secret-api-secret-here
API_KEY_GCM_TAG_LENGTH=128
API_KEY_SALT_LENGTH=16
API_KEY_NONCE_LENGTH=12
API_KEY_ITERATION_COUNT=100000

# JWT Secret for signing tokens
JWT_SECRET=your-super-secret-jwt-signing-key-here

# Database Configuration (if not using Docker Compose)
DB_URL=jdbc:oracle:thin:@localhost:1521/XEPDB1

DB_USERNAME=admin
DB_PASSWORD=secureDbPass
ORACLE_PASSWORD=secureDbPass

# CORS Configuration
ALLOW_PRIVATE_NETWORK=true
ALLOWED_ORIGINS=http://localhost:8079